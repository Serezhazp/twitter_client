<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/twiBlue</item>
        <item name="colorPrimaryDark">@color/twiBlue</item>
        <item name="colorAccent">@color/twiBlue</item>
    </style>

    <style name="TwiButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/twi_button_height</item>
        <item name="android:height">@dimen/twi_button_height</item>
    </style>

</resources>
